<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hjc.dao.UserDao">

    <resultMap id="UserResultMap" type="cn.hjc.entity.User">
        <id property="userId" column="user_id"/>
        <result property="cartId" column="cart_id"/>
        <result property="userName" column="username"/>
        <result property="passWord" column="password"/>
        <result property="gender" column="gender"/>
        <result property="address" column="address"/>
        <result property="phone" column="phone"/>
        <result property="enableStatus" column="enable_status"/>
        <result property="createTime" column="create_time"/>
        <result property="endEditTime" column="end_edit_time"/>

    </resultMap>

    <select id="login" parameterType="User" resultType="User" resultMap="UserResultMap">
        SELECT *
        FROM tb_user
        WHERE username = #{userName}
          AND password = #{passWord}
    </select>

    <select id="haveUserName" parameterType="User" resultType="User" resultMap="UserResultMap">
        SELECT tb_user.username
        FROM tb_user
        WHERE username = #{userName}
    </select>

</mapper>
    